<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="0dip"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
    	android:background="@drawable/img_home_background_2" 
        
        >
    
    <TextView
        android:id="@+id/fichaNombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:text="@string/app_name"
        style="@style/FuenteGrandeNegroNegrita"
        android:focusableInTouchMode="false"
		android:clickable="false"
		android:focusable="false"
		android:background="@drawable/papel_arriba"
        />
    <!-- android:textAlignment="center"  -->
	         
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    >

		<android.support.v4.view.PagerTabStrip
	        android:id="@+id/pager_header"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top"        
	        android:paddingBottom="4dp"
	        android:paddingTop="4dp"
	        android:textAppearance="@style/FuenteGrandeNegro"
	        android:background="@drawable/papel_abajo"
    	
        />

    </android.support.v4.view.ViewPager>

</LinearLayout>